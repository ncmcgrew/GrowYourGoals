<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs498r.growyourgoals.CreateNewGoal">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_below="@+id/spinnerQuan"
        android:inputType="numberDecimal"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:hint="Amount To Be Done" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unit"
        android:layout_below="@+id/amount"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:hint="Unit Of Measurement" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Plant"
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:onClick="choosePlant"
        android:layout_below="@+id/unit"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoalName"
        android:layout_marginTop="25dp"
        android:hint="Goal Name"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFreq"
        android:layout_below="@+id/GoalName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerImpor"
        android:layout_below="@+id/spinnerFreq"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/spinnerFreq"
        android:layout_alignStart="@+id/spinnerFreq" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerQuan"
        android:layout_below="@+id/spinnerImpor"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/spinnerImpor"
        android:layout_alignStart="@+id/spinnerImpor"
        android:layout_alignRight="@+id/spinnerImpor"
        android:layout_alignEnd="@+id/spinnerImpor" />

</RelativeLayout>